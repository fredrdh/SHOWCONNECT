<div class="new-event-container">
  <h1 class="new-event-title">New Event</h1>

  <%= simple_form_for @event, url: events_path, method: :post, html: { class: 'new-event-form' } do |f| %>

    <%= f.input :stage_name, label_html: { class: 'form-label' }, input_html: { class: 'form-input' } %>

    <%= f.input :category, label_html: { class: 'form-label' }, input_html: { class: 'form-input' } %>

    <%= f.input :specialty, label_html: { class: 'form-label' }, input_html: { class: 'form-input' } %>

    <%= f.input :description, as: :text, label_html: { class: 'form-label' }, input_html: { class: 'form-textarea' } %>

    <%= f.input :local, label_html: { class: 'form-label' }, input_html: { class: 'form-input' } %>

    <%= f.input :event_date, as: :date, label_html: { class: 'form-label' }, input_html: { class: 'form-input' } %>

    <%= f.input :price, as: :string, label_html: { class: 'form-label' }, input_html: { class: 'form-input', placeholder: 'R$' } %>

    <%= f.button :submit, "Create Event", class: 'btn-submit' %>

  <% end %>
</div>
