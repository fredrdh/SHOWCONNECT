    <% if @appointment.event %>
      <p><strong>Event:</strong> <%= @appointment.event.stage_name %></p>

      <p><strong>Price:</strong> <%= number_to_currency(@appointment.event.price, unit: "R$ ", separator: ",", delimiter: ".") %></p>
    <% else %>
      <p>No associated event</p>
    <% end %>

